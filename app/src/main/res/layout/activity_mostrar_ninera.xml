<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mostrar_ninera" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView21"
            android:layout_width="162dp"
            android:layout_height="163dp"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/Nombre_ninera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/direccion_ninera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtDireccion"
            android:textSize="18sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/Telefono_ninera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefono "
            android:textSize="18sp"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="18sp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0F0F0"
            android:padding="10dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/Descripcion_ninera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/solicitarninera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#00BCD4"
            android:onClick="solicitarNinera"
            android:text="Solicitar Niñera"
            android:textColor="#fff" />
    </LinearLayout>

</ScrollView>
